@model RoleModel
<h1 class="display-4">Create Role</h1>
<hr />
<form asp-controller="Admin" asp-action="RoleCreate" method="post">
    <div class="row fw-bold">
        <div class="col-md-6">
            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="Name">Role Name</label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row mb-2">
                <div class="col-md-10 offset-2">
                    <button class="btn btn-continue " style="width:211px" type="submit">Save Role</button>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
            }